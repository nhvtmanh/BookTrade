@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
    <script src="controller/book.js" asp-append-version="true"></script>
}

<div class="bg0 m-t-100 p-b-100">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-50">
            <div class="flex-w flex-c-m m-tb-10 justify-content-between" style="width: 100%">
                <div class="flex-w">
                    <div class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                        <i class="icon-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-filter-list"></i>
                        <i class="icon-close-filter cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                        Filter
                    </div>

                    <div class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                        <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                        <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                        Search
                    </div>
                </div>

                <div>
                    <button type="button" class="flex-c-m stext-101 cl0 size-103 bg1 bor1 hov-btn2 p-lr-15 trans-04" onclick="ShowPostModal()">
                        Create
                    </button>
                </div>
            </div>

            <!-- Search -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
                        <i class="zmdi zmdi-search"></i>
                    </button>

                    <input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                </div>
            </div>

            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="w-25 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Sort By
                        </div>

                        <ul>
                            <li class="p-b-6">
                                <a href="#" class="filter-link stext-106 trans-04">
                                    Default
                                </a>
                            </li>

                            <li class="p-b-6">
                                <a href="#" class="filter-link stext-106 trans-04 filter-link-active">
                                    Newest
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="w-25 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Categories
                        </div>

                        <div class="respon6-next">
                            <div class="rs1-select2 bor8 bg0">
                                <select class="js-select2" name="time">
                                    <option>Choose category</option>
                                    <option>Category 1</option>
                                    <option>Category 2</option>
                                    <option>Category 3</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row isotope-grid">
            
        </div>

        <!-- Load more -->
        <div class="flex-c-m flex-w w-full p-t-45">
            <a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div>
    </div>
</div>

<div class="modal fade" id="bookModal" tabindex="-1" aria-labelledby="bookModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content" id="bookModalContent">
        </div>
    </div>
</div>

<!-- Modal1 - Quick view book exchange -->
<div class="wrap-modal1 js-modal1 p-t-60 p-b-20">
    <div class="overlay-modal1 js-hide-modal1"></div>

    <div class="container">
        <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent">
            <button class="how-pos3 hov3 trans-04 js-hide-modal1">
                <img src="images/icons/icon-close.png" alt="CLOSE">
            </button>

            <div class="row">
                <div class="col-md-6 col-lg-7 p-b-30">
                    <div class="p-l-25 p-r-30 p-lr-0-lg">
                        <div class="wrap-slick3 flex-sb flex-w">
                            <div class="wrap-slick3-dots"></div>
                            <div class="wrap-slick3-arrows flex-sb-m flex-w"></div>

                            <div class="slick3 gallery-lb">
                                <div class="item-slick3" data-thumb="images/book-01.jpg">
                                    <div class="wrap-pic-w pos-relative">
                                        <img src="images/book-01.jpg" alt="IMG-BOOK">

                                        <a href="images/book-01.jpg" class="flex-c-m size-108 how-pos1 bor0 fs-16 cl10 bg0 hov-btn3 trans-04">
                                            <i class="fa fa-expand"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 col-lg-5 p-b-30">
                    <div class="p-r-50 p-t-5 p-lr-0-lg">
                        <h4 class="mtext-105 cl2 js-name-detail p-b-14">
                            ASP.NET Core in Action, Third Edition
                        </h4>

                        <span class="mtext-106 cl2">
                            Andrew Lock
                        </span>

                        <div class="cl2 p-t-20 d-flex justify-content-between align-items-center" style="font-family: Poppins-Regular; line-height: 1.5;">
                            <div>
                                <i class="zmdi zmdi-account-circle mr-2"></i>
                                Manh Nguyen
                            </div>

                            <div>
                                <i class="zmdi zmdi-calendar mr-2"></i>
                                26/06/2025 3:45 PM
                            </div>
                        </div>

                        <p class="stext-102 cl3 p-t-20">
                            Nulla eget sem vitae eros pharetra viverra. Nam vitae luctus ligula. Mauris consequat ornare feugiat.
                        </p>

                        <div class="p-t-30">
                            <div class="rs1-select2 bor8 bg0">
                                <select class="js-select2" name="time">
                                    <option>Choose book to exchange</option>
                                    <option>Book 1</option>
                                    <option>Book 2</option>
                                    <option>Book 3</option>
                                </select>
                                <div class="dropDownSelect2"></div>
                            </div>

                            <div class="flex-w flex-c-m p-t-30">
                                <button id="btnSendRequest" class="stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail">
                                    Send request
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>