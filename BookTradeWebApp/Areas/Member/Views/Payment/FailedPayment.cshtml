@using VNPAY.NET.Models

@{
    Layout = "_LayoutPayment";
}

@model PaymentResult

<div class="d-flex justify-content-center align-items-center" style="background: linear-gradient(90deg, #d53369 0%, #daae51 100%); height: 100%;">
    <div class="p-4 border rounded shadow" style="max-width: 28rem; min-width: 25rem; background-color: #fff;">
        <div class="d-flex flex-column justify-content-center align-items-center">
            <img src="/images/icons/icon-error.png" style="width: 4rem; height: 4rem;" />
            <h1 class="ltext-102 cl2 mt-3">Payment Failed</h1>
            <p class="mtext-107 mt-3">@(Model.PaymentResponse?.Description ?? "Your payment has failed!")</p>
        </div>
        <hr class="border opacity-75">
        <div class="d-flex flex-column gap-2">
            <div class="d-flex justify-content-between">
                <span class="mtext-107">Payment Method:</span>
                <span class="mtext-104 cl2">@Model.PaymentMethod</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="mtext-107">Payment Time:</span>
                <span class="mtext-104 cl2">@Model.Timestamp.ToString("dd/MM/yyyy HH:mm")</span>
            </div>
        </div>
        <div class="w-75 mx-auto">
            <button type="button" onclick="window.location.href='/member/shop'" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 mt-4 trans-04 pointer">
                Continue shopping
            </button>
        </div>
    </div>
</div>